  margin-bottom: 1.25rem;
  line-height: 1.75;
}

.prose blockquote {
  font-style: normal;
  border-radius: 0.5rem;
}

.prose ul {
  margin-top: 1.25rem;
  margin-bottom: 1.25rem;
}

.prose table {
  font-size: 0.875rem;
  line-height: 1.25rem;
}

.prose th {
  font-weight: 500;
  text-align: left;
}

