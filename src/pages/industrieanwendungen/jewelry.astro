  margin-top: 1.25rem;
  margin-bottom: 1.25rem;
}

.prose table {
  font-size: 0.875rem;
  line-height: 1.25rem;
}

.prose th {
  font-weight: 500;
  text-align: left;
}

.prose td {
  padding: 0.75rem 1rem;
}

.prose tbody tr:nth-child(odd) {
  background-color: rgb(249, 250, 251);
