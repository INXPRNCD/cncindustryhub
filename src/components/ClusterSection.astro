---
interface Props {
  cluster: {
    title: string;
    description: string;
    href: string;
    icon: string;
    topics: string[];
  };
}

const { cluster } = Astro.props;
---

<article class="bg-white rounded-xl shadow-sm hover:shadow-xl transition-all duration-300 p-8">
  <div class="grid md:grid-cols-3 gap-8 items-start">
    <div class="md:col-span-1">
      <div class="flex items-start gap-4 mb-6">
        <div class="w-12 h-12 shrink-0 bg-blue-50 rounded-lg p-2 group-hover:scale-110 transition-transform duration-300">
          <img 
            src={cluster.icon} 
            alt="" 
            class="w-full h-full text-blue-600"
            width="48"
            height="48"
          />
        </div>
        <h2 class="text-2xl font-bold text-gray-900">
          <a href={cluster.href} class="hover:text-blue-600 transition-colors">
            {cluster.title}
          </a>
        </h2>
      </div>
      <p class="text-gray-600 leading-relaxed mb-6">{cluster.description}</p>
      <a 
        href={cluster.href} 
        class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium group"
      >
        Mehr erfahren
        <svg 
          class="w-5 h-5 ml-2 transform transition-transform group-hover:translate-x-1" 
          fill="none" 
          viewBox="0 0 24 24" 
          stroke="currentColor"
        >
          <path 
            stroke-linecap="round" 
            stroke-linejoin="round" 
            stroke-width="2" 
            d="M13 7l5 5m0 0l-5 5m5-5H6"
          />
        </svg>
      </a>
    </div>
    <div class="md:col-span-2">
      <h3 class="text-lg font-semibold mb-4 text-gray-700">Kernthemen:</h3>
      <ul class="grid gap-3">
        {cluster.topics.map((topic) => (
          <li class="flex items-start gap-3">
            <svg 
              class="w-5 h-5 text-blue-600 mt-1" 
              fill="none" 
              viewBox="0 0 24 24" 
              stroke="currentColor"
            >
              <path 
                stroke-linecap="round" 
                stroke-linejoin="round" 
                stroke-width="2" 
                d="M9 5l7 7-7 7"
              />
            </svg>
            <span class="text-gray-600">{topic}</span>
          </li>
        ))}
      </ul>
    </div>
  </div>
</article>