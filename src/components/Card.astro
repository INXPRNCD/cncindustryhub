---
interface Props {
  title: string;
  description: string;
  icon?: string;
  class?: string;
}

const { title, description, icon, class: className } = Astro.props;
---

<div class:list={["bg-white p-6 rounded-lg shadow-md transition-transform duration-200 hover:translate-y-[-4px]", className]}>
  {icon && (
    <div class="w-12 h-12 mb-4">
      <img 
        src={icon} 
        alt="" 
        class="w-full h-full text-blue-600"
        style="color: #2563eb"
        width="48"
        height="48"
      />
    </div>
  )}
  <h3 class="text-xl font-bold mb-4">{title}</h3>
  <p class="text-gray-600">{description}</p>
  <slot />
</div>